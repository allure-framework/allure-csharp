      "$ref": "https://raw.githubusercontent.com/allure-framework/allure-csharp/selective-run/Allure.Net.Commons/Schemas/allureConfig.schema.json"
    }
  ],
  "properties": {
    "specflow": {
      "type": "object",
      "properties": {
        "stepArguments": {
          "type": "object",

            "convertToParameters": {
              "anyOf": [
                {
                  "type": "boolean"
                },
                {
                  "type": "string",
                  "enum": [ "true", "false" ]
                }
              ]
            },
            "paramNameRegex": {
              "type": "string"
            },
            "paramValueRegex": {
              "type": "string"
            }
          }
        },
        "grouping": {
          "type": "object",
          "properties": {
